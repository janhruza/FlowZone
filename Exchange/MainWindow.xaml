<core:IconlessWindow x:Class="Exchange.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:Exchange"
                     xmlns:core="clr-namespace:FZCore.Windows;assembly=FZCore"
                     xmlns:controls="clr-namespace:Exchange.Controls"
                     mc:Ignorable="d"
                     Title="Exchange"
                     WindowStartupLocation="CenterScreen"
                     ResizeMode="CanMinimize"
                     SizeToContent="WidthAndHeight"
                     SnapsToDevicePixels="True"
                     UseLayoutRounding="True">

    <TabControl Margin="10"
                Width="400">

        <TabItem Header="Currency Exchange">
            <controls:CtlExchangeCalculator Margin="0,5,0,0"/>
        </TabItem>
        
        <TabItem Header="Conversion History">
            <controls:CtlExchangeHistory />
        </TabItem>
        
    </TabControl>
    
</core:IconlessWindow>
