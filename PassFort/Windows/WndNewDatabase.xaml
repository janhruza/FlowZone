<Window x:Class="PassFort.Windows.WndNewDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassFort.Windows"
        WindowStartupLocation="CenterScreen"
        Title="Create new database"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!--Main content-->
        <StackPanel Margin="10,10,10,0"
                    Grid.Row="0"
                    Width="400">

            <Label Content="Database name"/>
            <TextBox Name="txtName"
                     SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

            <Label Content="Database location"
                   Margin="0,5,0,0"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="txtPath"
                         Margin="0,0,5,0"
                         Grid.Column="0"
                         SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

                <Button Content="..."
                        Name="btnChoose"
                        Grid.Column="1"
                        Click="btnChoose_Click"/>

            </Grid>

        </StackPanel>
        
        <!--Control buttons-->
        <StackPanel Margin="10"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Grid.Row="1">

            <Button Content="Cancel"
                    Margin="0,0,5,0"
                    Name="btnCancel"
                    Click="btnCancel_Click"/>
            
            <Button Content="Create"
                    Name="btnCreate"
                    Click="btnCreate_Click"/>

        </StackPanel>
        
    </Grid>
    
</Window>
