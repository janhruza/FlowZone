<Window x:Class="PassFort.Windows.WndCreateDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassFort.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Create new database"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,0">
            <Label Content="Database name"/>
            <TextBox Name="txtDbName"
                     Width="350"
                     SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

            <Label Content="Save location"
                   Margin="0,5,0,0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Name="txtPath"
                         Margin="0,0,5,0"
                         SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

                <Button Grid.Column="1"
                        Name="btnChoose"
                        Content=""
                        FontFamily="{DynamicResource IconsFont}"
                        Click="btnChoose_Click"/>
            </Grid>
        </StackPanel>
        
        <!--Control buttons panel-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="10">

            <Button Content="Cancel"
                    Name="btnCancel"
                    Margin="0,0,5,0"
                    Click="btnCancel_Click"/>
            
            <Button Content="Create"
                    Name="btnCreate"
                    Click="btnCreate_Click"/>

        </StackPanel>
    </Grid>
    
</Window>
