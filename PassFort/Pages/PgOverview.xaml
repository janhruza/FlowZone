<Page x:Class="PassFort.Pages.PgOverview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PassFort.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Overview">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Navigation view-->
        <TreeView Name="trFolders"
                  SelectedItemChanged="trFolders_SelectedItemChanged">
            
            <TreeViewItem Header="Database"
                          Name="trDbAll"
                          IsExpanded="True"
                          Width="150">
                
                <TreeViewItem Header="Social media"
                              Name="trSocialMedia"
                              Selected="trSocialMedia_Selected"/>
                
                <TreeViewItem Header="E-mail"
                              Name="trEmail"
                              Selected="trEmail_Selected"/>
                
                <TreeViewItem Header="Finance"
                              Name="trFinance"
                              Selected="trFinance_Selected"/>
                
                <TreeViewItem Header="Shopping"
                              Name="trShopping"
                              Selected="trShopping_Selected"/>
                
                <TreeViewItem Header="Gaming"
                              Name="trGaming"
                              Selected="trGaming_Selected"/>
                
                <TreeViewItem Header="Work"
                              Name="trWork"
                              Selected="trWork_Selected"/>
                
                <TreeViewItem Header="School"
                              Name="trSchool"
                              Selected="trSchool_Selected"/>
                
                <TreeViewItem Header="Utilities"
                              Name="trUtilities"
                              Selected="trUtilities_Selected"/>
                
                <TreeViewItem Header="Other"
                              Name="trOther"
                              Selected="trOther_Selected"/>
                
            </TreeViewItem>
        </TreeView>
        
        <!--Password view-->
        <Border Margin="10,0,0,0"
                Grid.Column="1">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <ListBox Name="lbEntries"
                         Margin="0,0,0,10"
                         SelectionChanged="lbEntries_SelectionChanged"/>

                <!--Control buttons-->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Content="Copy Username"
                            Margin="0,0,5,0"
                            Name="btnCopyUsername"
                            Click="btnCopyUsername_Click"
                            IsEnabled="False"/>
                    
                    <Button Content="Copy Password"
                            Margin="0,0,5,0"
                            Name="btnCopyPassword"
                            Click="btnCopyPassword_Click"
                            IsEnabled="False"/>

                    <Button Content="New Password"
                            Name="btnNewPassword"
                            Click="btnNewPassword_Click"/>

                </StackPanel>
            </Grid>
            
        </Border>
    </Grid>
</Page>
