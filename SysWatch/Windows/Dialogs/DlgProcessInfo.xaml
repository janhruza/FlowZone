<core:IconlessWindow x:Class="SysWatch.Windows.Dialogs.DlgProcessInfo"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:SysWatch.Windows.Dialogs"
                     xmlns:core="clr-namespace:FZCore.Windows;assembly=FZCore"
                     xmlns:controls="clr-namespace:FZCore.Controls;assembly=FZCore"
                     mc:Ignorable="d"
                     Title="Task Details"
                     ResizeMode="NoResize"
                     SizeToContent="WidthAndHeight"
                     Loaded="IconlessWindow_Loaded">
    
    <Grid Margin="10"
          Width="400">
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <controls:CtlTextInput Header="Process name"
                                   Name="txtProcessName"
                                   Text="N/A"
                                   IsReadOnly="True"/>

            <controls:CtlTextInput Header="Processor time"
                                   Name="txtExtra"
                                   Text="N/A"
                                   IsReadOnly="True"/>

            <controls:CtlTextInput Header="Main window"
                                   Name="txtWindowTitle"
                                   Text="N/A"
                                   IsReadOnly="True"/>

        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Cancel"
                    IsCancel="True"
                    Margin="0,0,5,0"/>
            
            <Button Content="OK"
                    IsCancel="True"
                    IsDefault="True"/>

        </StackPanel>
        
    </Grid>
    
</core:IconlessWindow>
