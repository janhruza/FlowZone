<core:FreeWindow x:Class="SysWatch.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SysWatch"
                 xmlns:controls="clr-namespace:FZCore.Controls;assembly=FZCore"
                 xmlns:core="clr-namespace:FZCore.Windows;assembly=FZCore"
                 mc:Ignorable="d"
                 Title="{Binding ElementName=wnd, Path=DefaultTitle}"
                 WindowStartupLocation="CenterScreen"
                 MinWidth="350"
                 MinHeight="350"
                 ResizeMode="CanResize"
                 SnapsToDevicePixels="True"
                 UseLayoutRounding="True"
                 Width="1000"
                 Height="650"
                 Loaded="IconlessWindow_Loaded"
                 KeyDown="IconlessWindow_KeyDown"
                 MouseLeftButtonDown="wnd_MouseLeftButtonDown"
                 Name="wnd">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Navigation panel-->
        <TreeView Grid.Column="0"
                  Margin="10"
                  Name="tvMenu">

            <TreeViewItem Header="Dashboard"
                          Padding="0,10,0,10"
                          Name="tviDashboard"
                          Selected="tviDashboard_Selected"/>
            
            <TreeViewItem Header="CPU Usage"
                          Padding="0,10,0,10"
                          Name="tviCPU"
                          Selected="tviCPU_Selected"/>

            <TreeViewItem Header="RAM Usage"
                          Padding="0,10,0,10"
                          Name="tviRAM"
                          Selected="tviRAM_Selected"/>

            <TreeViewItem Header="Processes"
                          Padding="0,10,0,10"
                          Name="tviTasks"
                          Selected="tviTasks_Selected"/>

        </TreeView>

        <Frame Grid.Column="1"
               Margin="0,10,10,10"
               Name="frm"
               NavigationUIVisibility="Hidden"
               Navigated="frm_Navigated"/>

        <controls:CtlCaptionButtons Grid.Column="1"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Name="ctlButtons"
                                    Foreground="White"
                                    Visibility="Collapsed"/>

    </Grid>
    
</core:FreeWindow>
