<Page x:Class="SysWatch.Pages.PgDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SysWatch.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Dashboard"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Top-Left-->
        <Label VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="0"
               Grid.Column="0">
            
            <TextBlock FontSize="28">
            
                <Run Text="CPU:"/>
                <Run Name="rCPU"
                     Foreground="{x:Static SystemColors.AccentColorBrush}"
                     Text="0"/>
                <Run Text="%"/>

            </TextBlock>
        </Label>

        <!--Top-Right-->
        <Label VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="0"
               Grid.Column="1">

                <TextBlock FontSize="28">
    
                    <Run Text="RAM:"/>
                    <Run Name="rRAM"
                         Foreground="{x:Static SystemColors.AccentColorBrush}"
                         Text="0"/>
                    <Run Text="%"/>

            </TextBlock>
        </Label>

        <!--Bottom-Left-->
        <Label VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="1"
               Grid.Column="0">

            <TextBlock FontSize="28">
    
                <Run Text="IO:"/>
                <Run Name="rIO"
                     Foreground="{x:Static SystemColors.AccentColorBrush}"
                     Text="0"/>
                <Run Text="%"/>

            </TextBlock>
        </Label>

        <!--Bottom-Left-->
        <Label VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="1"
               Grid.Column="1">

            <TextBlock FontSize="28">
    
                <Run Text="GPU:"/>
                <Run Name="rGPU"
                     Foreground="{x:Static SystemColors.AccentColorBrush}"
                     Text="0"/>
                <Run Text="%"/>

            </TextBlock>
        </Label>
    </Grid>
    
</Page>
