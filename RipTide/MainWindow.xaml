<core:IconlessWindow x:Class="RipTide.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:RipTide"
                     xmlns:core="clr-namespace:FZCore.Windows;assembly=FZCore"
                     mc:Ignorable="d"
                     WindowStartupLocation="CenterScreen"
                     Title="RipTide - Simple video downloader"
                     ResizeMode="CanMinimize"
                     SizeToContent="WidthAndHeight"
                     SnapsToDevicePixels="True"
                     UseLayoutRounding="False"
                     KeyDown="Window_KeyDown">

    <core:IconlessWindow.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Reload"
                      InputGestureText="F5"
                      Click="miResetFields_Click"/>

            <MenuItem Header="Check for updates"
                      Name="miCheckForUpdates"
                      Click="miCheckForUpdates_Click"/>

            <Separator />
            <MenuItem Header="Close"
                      InputGestureText="Alt+F4"
                      Click="miClose_Click"/>
        </ContextMenu>
    </core:IconlessWindow.ContextMenu>

<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Navigation menu-->
        <Menu Grid.Row="0">
            
            <!--File menu-->
            <MenuItem Header="File">

                <MenuItem Name="miResetFields"
                          Header="Reload"
                          InputGestureText="F5"
                          Click="miResetFields_Click"/>

                <MenuItem Header="Check for updates"
                          Click="miCheckForUpdates_Click"/>

                <Separator />

                <MenuItem Name="miClose"
                          Header="Close"
                          InputGestureText="Alt+F4"
                          Click="miClose_Click"/>
            </MenuItem>
            
            <!--Help menu-->
            <MenuItem Header="Help">
                <MenuItem Name="miSupportedSites"
                          Header="Supported sites"
                          Click="miSupportedSites_Click"/>

                <MenuItem Name="miMissingDownloader"
                          Header="Missing downloader"
                          Click="miMissingDownloader_Click"/>

                <Separator />

                <MenuItem Name="miAbout"
                          Header="About RipTide"
                          InputGestureText="F1"
                          Click="miAbout_Click"/>

            </MenuItem>
            
            <!--Settings menu-->
            <MenuItem Header="Settings">
                <MenuItem Header="Always on Top"
                          Name="miAoT"
                          IsCheckable="True"
                          Checked="miAoT_Checked"
                          Unchecked="miAoT_Unchecked"/>

                <Separator />

                <MenuItem Header="Custom Downloader">

                    <MenuItem Header="Select custom..."
                              Name="miCustomPath"
                              Click="miCustomPath_Click"/>

                    <MenuItem Header="Reset to default"
                              Name="miCustomPathReset"
                              Click="miCustomPathReset_Click"/>

                </MenuItem>
                
                <!--Theme submenu-->
                <MenuItem Header="Theme">
                    
                    <MenuItem Header="Light"
                              Name="miThemeLight"
                              Click="miThemeLight_Click"
                              IsCheckable="True"/>
                    
                    <MenuItem Header="Dark"
                              Name="miThemeDark"
                              Click="miThemeDark_Click"
                              IsCheckable="True"/>
                    
                    <MenuItem Header="System"
                              Name="miThemeSystem"
                              Click="miThemeSystem_Click"
                              IsCheckable="True"/>

                    <Separator />
                    
                    <MenuItem Header="None (Legacy)"
                              Name="miThemeLegacy"
                              Click="miThemeLegacy_Click"
                              IsCheckable="True"/>

                </MenuItem>
                
            </MenuItem>

        </Menu>
        
        <!--Content panel-->
        <StackPanel Grid.Row="1"
                    Margin="10,0,10,0">

            <Label Content="Video URL"/>
            <TextBox Width="450"
                     Name="txtUrl"
                     Margin="0,0,0,5"
                     SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

            <Label Content="Save location"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Name="txtLocation"
                         SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

                <Button Grid.Column="1"
                        Margin="5,0,0,0"
                        Content="..."
                        Name="btnChooseLocation"
                        Click="btnChooseLocation_Click"/>
            </Grid>

            <Expander Header="More"
                      Margin="0,10,0,0"
                      IsExpanded="False">

                <StackPanel>
                    <Label Content="Use cookies (e. g. for downloading login-only locked videos)"/>
                    <ComboBox Name="cbCookiesBrowsers"
                              Margin="0,0,0,5"/>

                    <Label Content="Additional command line parameters"/>
                    <ListBox Height="120"
                             Name="lbExtraParams"
                             SelectionChanged="lbExtraParams_SelectionChanged"/>

                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Grid.Column="1">

                            <Button Content="Remove selected"
                                    Name="btnRemoveParam"
                                    Click="btnRemoveParam_Click"
                                    Margin="0,0,5,0"
                                    IsEnabled="False"/>

                            <Button Content="Add parameter"
                                    Name="btnAddParam"
                                    Click="btnAddParam_Click"/>

                        </StackPanel>
                    </Grid>
                </StackPanel>

            </Expander>

        </StackPanel>
        
        <!--Controls panel-->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">

            <Button Content="Close"
                    Margin="0,0,5,0"
                    Name="btnClose"
                    Click="btnClose_Click"/>
            
            <Button Content="Download"
                    Name="btnDownload"
                    Click="btnDownload_Click"/>

        </StackPanel>
    </Grid>
    
</core:IconlessWindow>
