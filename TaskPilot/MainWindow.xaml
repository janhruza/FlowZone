<core:IconlessWindow x:Class="TaskPilot.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:TaskPilot"
                     xmlns:core="clr-namespace:FZCore.Windows;assembly=FZCore"
                     mc:Ignorable="d"
                     Title="Task Pilot"
                     WindowStartupLocation="CenterScreen"
                     Height="480"
                     Width="640"
                     MinWidth="300"
                     MinHeight="300"
                     SnapsToDevicePixels="True"
                     UseLayoutRounding="True"
                     Loaded="IconlessWindow_Loaded"
                     KeyDown="IconlessWindow_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="10,10,10,0">

            <ListBox Name="lbTasks"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="miRefreshView"
                                  Header="Refresh"
                                  InputGestureText="F5"
                                  Click="miRefreshView_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
                
            </ListBox>
        </Border>
        
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Grid.Row="1">

            <Button Content=""
                    Margin="0,0,5,0"
                    FontFamily="{DynamicResource IconsFont}"
                    Name="btnSave"
                    Click="btnSave_Click"/>

            <Button Content=""
                    Margin="0,0,5,0"
                    FontFamily="{DynamicResource IconsFont}"
                    Name="btnRefresh"
                    Click="btnRefresh_Click"/>

            <Button Content=""
                    FontFamily="{DynamicResource IconsFont}"
                    Name="btnNewTask"
                    Click="btnNewTask_Click"/>

        </StackPanel>
    </Grid>
    
</core:IconlessWindow>
