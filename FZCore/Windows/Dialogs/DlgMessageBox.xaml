<local:IconlessWindow x:Class="FZCore.Windows.Dialogs.DlgMessageBox"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:FZCore.Windows"
                      mc:Ignorable="d"
                      Title="Message Box"
                      WindowStartupLocation="CenterScreen"
                      Topmost="True"
                      ResizeMode="NoResize"
                      MinWidth="320"
                      MaxWidth="500"
                      SizeToContent="WidthAndHeight"
                      ShowActivated="True"
                      Loaded="IconlessWindow_Loaded">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Icon-->
        <Image Name="img"
               Grid.Row="0"
               Grid.Column="0"
               Width="48"
               Height="48"
               Margin="0,0,10,0"
               VerticalAlignment="Center"/>

        <!--Message text-->
        <TextBlock Name="tbMessage"
                   Grid.Row="0"
                   Grid.Column="1"
                   TextWrapping="Wrap"
                   TextTrimming="CharacterEllipsis"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,10,0"/>

        <!-- Dialog buttons (created dynamically) -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Name="stpButtons"
                    Margin="0,10,0,0"/>

    </Grid>
    
</local:IconlessWindow>
