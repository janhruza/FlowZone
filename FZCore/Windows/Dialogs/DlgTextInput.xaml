<local:IconlessWindow x:Class="FZCore.Windows.Dialogs.DlgTextInput"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:FZCore.Windows"
                      xmlns:controls="clr-namespace:FZCore.Controls"
                      mc:Ignorable="d"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="NoResize"
                      Topmost="True"
                      Title="Input required"
                      SizeToContent="WidthAndHeight">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:CtlTextInput Header="Enter a value"
                               Grid.Row="0"
                               Width="300"
                               x:Name="txt"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Cancel"
                    Margin="0,0,5,0"
                    IsCancel="True"/>
            
            <Button Content="OK"
                    Name="btnOK"
                    Click="btnOK_Click"/>
            
        </StackPanel>
    </Grid>
    
</local:IconlessWindow>
