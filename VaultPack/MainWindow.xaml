<Window x:Class="VaultPack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaultPack"
        mc:Ignorable="d"
        Title="VaultPack"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        SizeToContent="WidthAndHeight">

    <Grid>
        <TabControl Margin="10">
            <TabItem Header="New archive">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Margin="10,10,10,0">

                        <Label Content="Files to be put in the archive"></Label>
                        <ListBox Width="450"
                                 Height="150"
                                 Name="lbFilesToAdd"/>

                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal"
                                    Margin="0,10,0,0">

                            <Button Margin="0,0,5,0"
                                    Content="Remove selected"
                                    Name="btnCreateRemove"
                                    Click="btnCreateRemove_Click"/>
                            
                            <Button Content="Add file"/>

                        </StackPanel>

                        <Label Content="Output file"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Margin="0,0,5,0"
                                     SelectionBrush="{x:Static SystemColors.AccentColorBrush}"
                                     Name="txtCreatePath"/>

                            <Button Grid.Column="1"
                                    Content="..."
                                    Name="btnCreateChoose"
                                    Click="btnCreateChoose_Click"/>
                        </Grid>

                    </StackPanel>
                    
                    <StackPanel Grid.Row="1"
                                Margin="10,10,10,0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">

                        <Button Margin="0,0,5,0"
                                Content="Clear"
                                Name="btnClearCreate"/>
                        
                        <Button Margin="0"
                                Content="Create"
                                Name="btnCreate"
                                Click="btnCreate_Click"/>

                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Extract existing">

            </TabItem>
        </TabControl>
    </Grid>
    
</Window>
