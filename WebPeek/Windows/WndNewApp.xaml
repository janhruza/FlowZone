<core:IconlessWindow x:Class="WebPeek.Windows.WndNewApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebPeek.Windows"
        xmlns:core="clr-namespace:FZCore.Windows;assembly=FZCore"
        mc:Ignorable="d"
        Title="Add page as application"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <StackPanel Margin="10"
                Width="320">
        
        <Label Content="Display mame"/>
        <TextBox Name="txtName"/>

        <Label Content="Website URL"
               Margin="0,5,0,0"/>
        
        <TextBox Name="txtUrl"/>

        <Grid Margin="0,10,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--Left column-->
            <Button Content="Fetch title"
                    Name="btnFetchTitle"
                    ToolTip="Retrieve the website title directly from the URL"
                    Click="btnFetchTitle_Click"/>

            <!--Right column-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1">

                <Button Content="Cancel"
                        Margin="0,0,5,0"
                        Name="btnCancel"
                        Click="btnCancel_Click"/>

                <Button Content="Add"
                        Name="btnAdd"
                        Click="btnAdd_Click"/>

            </StackPanel>

        </Grid>

    </StackPanel>
    
</core:IconlessWindow>
