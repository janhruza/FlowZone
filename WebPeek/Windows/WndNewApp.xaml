<Window x:Class="WebPeek.Windows.WndNewApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebPeek.Windows"
        mc:Ignorable="d"
        Title="Add page as application"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <StackPanel Margin="10"
                Width="320">
        
        <Label Content="Display mame"/>
        <TextBox Name="txtName"
                 SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

        <Label Content="Website URL"
               Margin="0,5,0,0"/>
        
        <TextBox Name="txtUrl"
                 SelectionBrush="{x:Static SystemColors.AccentColorBrush}"/>

        <StackPanel Margin="0,10,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel"
                    Margin="0,0,5,0"
                    Name="btnCancel"
                    Click="btnCancel_Click"/>
            
            <Button Content="Add"
                    Name="btnAdd"
                    Click="btnAdd_Click"/>

        </StackPanel>

    </StackPanel>
    
</Window>
